{
  "name": "npm-ghost-buster",
  "version": "1.3.0",
  "description": "A CLI tool to find unused and phantom dependencies in your project.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "npm-ghost-buster": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --sourcemap",
    "start": "node dist/index.js",
    "bust": "npm run build && node dist/index.js --path .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "analysis",
    "dependencies",
    "typescript",
    "ghost",
    "dead-code",
    "cleanup"
  ],
  "author": "Guilherme Dantas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dants0/npm-ghost-buster.git"
  },
  "bugs": {
    "url": "https://github.com/dants0/npm-ghost-buster/issues"
  },
  "homepage": "https://github.com/dants0/npm-ghost-buster#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "glob": "^13.0.2",
    "ora": "^9.3.0",
    "prompts": "^2.4.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^25.2.3",
    "@types/prompts": "^2.4.9",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
